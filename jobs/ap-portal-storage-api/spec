  objectStorage.swift.authMethod:
    description: 'Enter the auth method'
    default: 'keystone'
  objectStorage.swift.preferredRegion:
    description: 'Enter the preferred region'
    default: 'Public'
  objectStorage.swift.container:
    description: 'Enter the container'
