check process ap-portal-common-api
  with pidfile /var/vcap/sys/run/ap-portal-common-api/ap-portal-common-api.pid
  start program "/var/vcap/jobs/ap-portal-common-api/bin/monit_debugger service_ctl '/var/vcap/jobs/ap-portal-common-api/bin/service_ctl start'"
  stop program "/var/vcap/jobs/ap-portal-common-api/bin/monit_debugger service_ctl '/var/vcap/jobs/ap-portal-common-api/bin/service_ctl stop'"
  group vcap
